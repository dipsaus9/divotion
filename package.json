{
	"name": "divotion",
	"version": "1.0.0",
	"description": "An apple a day...",
	"author": "Dennis Dipsaus",
	"private": true,
	"engines": {
		"node": "^13"
	},
	"scripts": {
		"dev": "sh scripts/dev.sh",
		"production": "sh scripts/production.sh",
		"lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
		"lintfix": "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
		"precommit": "lint",
		"generate": "nuxt generate",
		"stylelint": "stylelint '**/*.vue' '**/*.scss'",
		"stylelint:fix": "stylelint '**/*.vue' '**/*.scss' --fix"
	},
	"dependencies": {
		"@nuxtjs/axios": "^5.11.0",
		"nuxt": "^2.12.2"
	},
	"devDependencies": {
		"@nuxtjs/style-resources": "^1.0.0",
		"babel-eslint": "^10.1.0",
		"check-node-version": "^4.0.3",
		"eslint": "^7.2.0",
		"eslint-loader": "^4.0.2",
		"eslint-plugin-nuxt": "^1.0.0",
		"eslint-plugin-only-warn": "^1.0.2",
		"eslint-plugin-vue": "^6.2.2",
		"stylelint": "^13.6.0",
		"stylelint-logical-order": "0.0.8",
		"matise-gryd": "^1.0.9",
		"node-sass": "^4.14.1",
		"sass-loader": "^8.0.2"
	},
	"browserslist": [
		"last 2 versions",
		"not dead"
	],
	"stylelint": {
		"rules": {
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"if",
						"for",
						"else",
						"each",
						"mixin",
						"include",
						"content",
						"extend"
					]
				}
			],
			"order/order": [
				"custom-properties",
				"dollar-variables",
				"declarations",
				"rules"
			],
			"indentation": "tab"
		},
		"extends": [
			"stylelint-logical-order"
		]
	}
}
